{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "USE_SQLITE": "true",
    "VERCEL": "1",
    "ALLOWED_ORIGINS": "https://ufc-gray.vercel.app,capacitor://localhost,ionic://localhost"
  }
} 